%table
  %tr
    %th Name
    %th Address
    %th Tel
    %th Email
    %th Memo
    %th
    %th
    %th

  - @companies.each do |company|
    %tr
      %td= company.name
      %td= company.address
      %td= company.tel
      %td= company.email
      %td= company.memo
      %td= link_to 'Show', company
      %td= link_to 'Edit', edit_company_path(company)
